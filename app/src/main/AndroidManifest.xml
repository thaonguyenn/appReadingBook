<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="itnl.app.com.bookreading">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".application.BookApplication"
        android:allowBackup="true"
        android:icon="@drawable/b_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/b_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.home.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.home.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver
            android:name=".utils.NetworkStateReceiver"
            android:label="NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".utils.NetworkStateChangeReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".view.home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <!-- <activity android:name=".view.book.BookDetailActivity"></activity> -->
        <activity
            android:name=".view.book.BookDetailActivity"
            android:label="Book"
            android:theme="@style/AppBaseTheme"></activity>
        <activity
            android:name=".view.book.BookReaderActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.usermanager.SignupActivity" />
        <activity android:name=".view.usermanager.LoginfirebaseActivity" />
        <activity android:name=".view.usermanager.ResetpassActivity" />
        <activity android:name=".view.usermanager.Thongtin" />
        <activity android:name=".view.usermanager.Changeemail" />

    </application>

</manifest>