<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/comment_layout_fragment"
    tools:context=".view.book.comments.CommentFragment">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="70dp"
        android:orientation="vertical"
        android:weightSum="3"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/top_comment_view"
            android:layout_width="match_parent"
            android:background="@color/red"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"
            android:layout_height="100dp">

        </android.support.constraint.ConstraintLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/top_comment_view"
            app:layout_constraintBottom_toTopOf="@id/bottom_comment_view">

        </android.support.v7.widget.RecyclerView>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottom_comment_view"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/red"
            android:layout_weight="1"
            android:layout_height="100dp">

        </android.support.constraint.ConstraintLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout> </FrameLayout>